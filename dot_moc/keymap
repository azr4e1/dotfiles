# Set vim bindings
menu_down             = j
menu_up               = k
menu_page_down        = ^d
menu_page_up          = ^u
menu_first_item       = g
menu_last_item        = G

seek_forward          = l
seek_backward         = h
seek_forward_fast     = L
seek_backward_fast    = H

